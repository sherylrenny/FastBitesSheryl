@model List<FastBites.Models.CartItem>
@{
    ViewData["Title"] = "Cart";
    decimal total = ViewBag.Total ?? 0m;
}
<h2>Your Cart</h2>
@if (!Model.Any())
{
    <div class="alert alert-info">Your cart is empty. <a href="/Menu">Shop now</a>.</div>
}
else
{
    <table class="table">
        <thead><tr><th>Item</th><th>Unit</th><th>Qty</th><th>Total</th><th></th></tr></thead>
        <tbody>
            @foreach (var it in Model)
            {
                <tr>
                    <td>@it.ProductName</td>
                    <td>@it.UnitPrice.ToString("C")</td>
                    <td>@it.Quantity</td>
                    <td>@it.Total.ToString("C")</td>
                    <td><a class="btn btn-sm btn-danger" href="/Cart/Remove?productId=@it.ProductId">Remove</a></td>
                </tr>
            }
        </tbody>
    </table>
    <div class="text-end">
        <h4>Grand Total: @total.ToString("C")</h4>
        <a class="btn btn-primary">Proceed to Checkout (demo)</a>
    </div>
}
